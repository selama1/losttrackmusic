---
const { title = 'Lost Track', description = 'Soundtracks for alternate futures' } = Astro.props;
import '../styles/global.css';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={new URL(Astro.url.pathname, Astro.site)} />
    <meta property="og:image" content="/hero-machine.svg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/hero-machine.svg" />
  </head>
  <body class="min-h-screen">
    <header class="sticky top-0 backdrop-blur bg-white/40 border-b border-black/10">
      <nav class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
        <a href="/" class="font-extrabold text-xl">Lost Track</a>
        <div class="flex gap-2 text-sm">
          <a class="px-3 py-2 rounded-xl hover:bg-black/5" href="/machine">The Machine</a>
          <a class="px-3 py-2 rounded-xl hover:bg-black/5" href="/blog">Blog</a>
          <a class="px-3 py-2 rounded-xl hover:bg-black/5" href="/about">About</a>
        </div>
      </nav>
    </header>
    <main class="px-6 py-10"><slot /></main>
    <footer class="border-t border-black/10 bg-white/50 backdrop-blur">
      <div class="max-w-6xl mx-auto px-4 py-6 text-xs text-zinc-600 flex items-center justify-between">
        <span>Â© {new Date().getFullYear()} Lost Track</span>
        <div class="flex gap-3">
          <a href="#" class="hover:text-black">Spotify</a>
          <a href="#" class="hover:text-black">Apple Music</a>
          <a href="#" class="hover:text-black">YouTube</a>
          <a href="#" class="hover:text-black">Instagram</a>
        </div>
      </div>
    </footer>
  </body>
</html>
