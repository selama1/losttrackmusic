---
const { title = 'Lost Track', description = 'Soundtracks for alternate futures' } = Astro.props;
import '../styles/global.css';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="min-h-screen text-zinc-100">
    <header class="sticky top-0 backdrop-blur bg-black/20 border-b border-white/10">
      <nav class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
        <a href="/" class="font-extrabold text-xl">Lost Track</a>
        <div class="flex gap-2 text-sm">
          <a class="px-3 py-2 rounded-xl hover:bg-white/10" href="/machine">The Machine</a>
          <a class="px-3 py-2 rounded-xl hover:bg-white/10" href="/blog">Blog</a>
          <a class="px-3 py-2 rounded-xl hover:bg-white/10" href="/about">About</a>
        </div>
      </nav>
    </header>

    <main class="px-6 py-10">
      <slot />
    </main>

    <footer class="border-t border-white/10">
      <div class="max-w-6xl mx-auto px-4 py-6 text-xs text-zinc-400 flex items-center justify-between">
        <span>Â© {new Date().getFullYear()} Lost Track</span>
        <div class="flex gap-3">
          <a href="#" class="hover:text-white">Spotify</a>
          <a href="#" class="hover:text-white">Apple Music</a>
          <a href="#" class="hover:text-white">YouTube</a>
          <a href="#" className="hover:text-white">Instagram</a>
        </div>
      </div>
    </footer>
  </body>
</html>
