---
/**
 * Props:
 * - title?: string  (optional heading)
 * - subtitle?: string (optional)
 * - uid: string     (from Kit embed code: data-uid="xxxx")
 *
 * Paste the exact <script ... data-uid="..."> from Kit.
 */
const { title = "Join the mailing list", subtitle = "Get updates about Lost Track & The Machine.", uid } = Astro.props;
---

<section class="rounded-2xl border border-white/10 bg-white/5 p-4 md:p-6">
  <h2 class="text-2xl font-bold">{title}</h2>
  <p class="text-sm text-zinc-300 mt-1">{subtitle}</p>

  <!-- Kit embed: replace YOUR_UID with the data-uid from your Kit form -->
  <script async data-uid={uid} src="https://f.convertkit.com/{uid}.js"></script>

  <!-- Optional: a small privacy note under the form -->
  <p class="text-xs text-zinc-500 mt-3">
    No spam. Unsubscribe any time.
  </p>
</section>
