---
import BaseLayout from '../../layouts/BaseLayout.astro';

const tracks = [
  { slug: 'life-department', title: 'Life Department', duration: '' },
  { slug: 'a-day-in-life', title: 'A Day in Life', duration: '' },
  { slug: 'roller-coaster', title: 'Roller Coaster', duration: '' },
  { slug: 'better', title: 'Better', duration: '' },
  { slug: 'cooped-up', title: 'Cooped Up', duration: '' },
  { slug: 'i-will-write-this-song-tomorrow', title: 'I Will Write This Song Tomorrow', duration: '' },
  { slug: 'the-response', title: 'The Response', duration: '' },
  { slug: 'flying-away', title: 'Flying Away', duration: '' },
  { slug: 'why-are-we-here', title: 'Why Are We Here', duration: '' },
  { slug: 'this-is-why-we-sleep', title: 'This Is Why We Sleep', duration: '' },
  { slug: 'stream-of-thoughts', title: 'Stream of Thoughts', duration: '' },
  { slug: 'the-roller-coaster-reprise', title: 'The Roller Coaster (Reprise)', duration: '' },
  { slug: 'public-safety-announcement', title: 'Public Safety Announcement', duration: '' }
];
---
<BaseLayout title="Vive La Existence â€“ Music">
  <!-- HERO-LITE -->
  <section class="relative py-10 md:py-14">
    <div class="max-w-7xl mx-auto px-6 md:px-8">
      <div class="rounded-2xl border border-white/70 bg-white/70 backdrop-blur p-6 md:p-8 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <h1 class="text-2xl md:text-3xl font-bold">Listen</h1>
          <div class="text-sm text-zinc-600">{tracks.length} tracks</div>
        </div>

        <!-- Streaming buttons (replace links) -->
        <div class="mt-4 flex flex-wrap gap-2">
          <a href="#" class="rounded-xl px-4 py-2 bg-black text-white text-sm hover:opacity-90">Spotify</a>
          <a href="#" class="rounded-xl px-4 py-2 bg-red-600 text-white text-sm hover:opacity-90">YouTube</a>
          <a href="#" class="rounded-xl px-4 py-2 bg-pink-600 text-white text-sm hover:opacity-90">Apple Music</a>
          <a href="#" class="rounded-xl px-4 py-2 border border-zinc-300 text-zinc-800 hover:bg-black/5">Bandcamp</a>
        </div>

        <!-- Track list -->
        <div class="mt-8 grid md:grid-cols-2 gap-5">
          {tracks.map((t, idx) => (
            <div class="rounded-xl border border-zinc-200/70 bg-white/80 p-4">
              <div class="flex items-start justify-between">
                <div>
                  <div class="text-sm text-zinc-500">{String(idx+1).padStart(2, '0')}</div>
                  <h2 class="text-lg font-semibold leading-6">{t.title}</h2>
                </div>
                <!-- Optional duration badge -->
                {t.duration && (<span class="text-xs px-2 py-1 rounded-full border border-zinc-300 text-zinc-600">{t.duration}</span>)}
              </div>
              <!-- Drop in your embed or audio file -->
              <div class="mt-3">
                <!-- Example HTML5 audio (swap src to your hosted file): -->
                <!-- <audio controls preload="none" src={`/audio/vive/${t.slug}.mp3`} class="w-full"></audio> -->

                <!-- Or paste a Spotify/YouTube/Bandcamp embed here per track. -->
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
