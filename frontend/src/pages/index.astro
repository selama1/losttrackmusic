---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Lost Track — Soundtracks for alternate futures">
  <!-- HERO / CINEMATIC BANNER -->
  <section class="relative isolate overflow-hidden">
    <!-- Optional hero image: drop a custom image at /public/images/home/home-hero.jpg -->
    <img src="/images/home/home-hero.jpg" alt="" class="absolute inset-0 h-full w-full object-cover object-[center_30%]" loading="eager" fetchpriority="high" />

    <!-- Gradient + light overlays (work even if image is missing) -->
    <div class="absolute inset-0 pointer-events-none bg-gradient-to-b from-zinc-900 via-indigo-900/40 to-white/10"></div>
    <div class="absolute inset-0 pointer-events-none bg-[radial-gradient(1200px_600px_at_70%_10%,rgba(99,102,241,0.25),transparent_70%)]"></div>
    <div class="absolute inset-0 pointer-events-none mix-blend-overlay opacity-20 bg-[linear-gradient(120deg,rgba(255,255,255,.25)_0%,rgba(255,255,255,0)_35%),radial-gradient(600px_300px_at_20%_20%,rgba(255,255,255,.15),transparent_60%)]"></div>

    <!-- Decorative inline SVG network lines -->
    <svg aria-hidden="true" class="absolute inset-0 w-full h-full opacity-60 mix-blend-screen pointer-events-none" viewBox="0 0 1200 700" preserveAspectRatio="none">
      <defs>
        <linearGradient id="wire" x1="0" y1="0" x2="1" y2="1">
          <stop offset="0%" stop-color="rgba(255,255,255,0.7)"/>
          <stop offset="100%" stop-color="rgba(255,255,255,0.1)"/>
        </linearGradient>
      </defs>
      <path d="M0 80 C 200 40, 1000 120, 1200 80" stroke="url(#wire)" stroke-width="1.2" fill="none"/>
      <path d="M0 160 C 250 100, 950 200, 1200 160" stroke="url(#wire)" stroke-width="1" fill="none"/>
      <path d="M0 240 C 220 190, 980 280, 1200 240" stroke="url(#wire)" stroke-width="0.9" fill="none"/>
      <circle cx="600" cy="260" r="80" fill="none" stroke="url(#wire)" stroke-width="1"/>
      <circle cx="600" cy="260" r="130" fill="none" stroke="url(#wire)" stroke-width="1.2"/>
    </svg>

    <!-- Headline & CTA -->
    <div class="relative z-10 mx-auto max-w-7xl w-full px-6 md:px-8 min-h-[48svh] md:min-h-[48vh] flex items-end">
      <div class="w-full pb-12 md:pb-16 text-center">
        <h1 class="text-5xl sm:text-6xl font-extrabold tracking-tight text-white drop-shadow">Lost Track</h1>
        <p class="mt-3 text-lg md:text-xl text-white/90 italic">Soundtracks for alternate futures</p>
        <div class="mt-8 flex flex-wrap justify-center gap-3">
          <a href="/machine" class="rounded-2xl px-5 py-2.5 bg-white text-zinc-900 font-medium shadow hover:shadow-md hover:-translate-y-0.5 transition">Explore albums</a>
          <a href="#subscribe" class="rounded-2xl px-5 py-2.5 border border-white/40 text-white/95 hover:bg-white/10 backdrop-blur-sm transition">Get updates</a>
        </div>
      </div>
    </div>
  </section>

  <!-- FEATURED ALBUMS -->
  <section class="relative py-14 md:py-20">
    <div class="max-w-7xl mx-auto px-6 md:px-8">
      <h2 class="text-2xl font-semibold mb-6">Albums</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">      
        <!-- Machine -->
        <a href="/machine" class="group block rounded-2xl overflow-hidden border border-white/70 bg-white/70 backdrop-blur shadow-sm hover:shadow-lg transition">
          <div class="relative h-48">
            <img src="/images/story/story-banner.jpg" alt="The Rise and Fall of the Machine banner" class="absolute inset-0 w-full h-full object-cover object-[center_30%]" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/10 to-transparent"></div>
            <div class="absolute bottom-3 left-3 text-white text-sm px-2 py-1 rounded bg-white/10 border border-white/20">Album</div>
          </div>
          <div class="p-5">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold">The Rise and Fall of the Machine</h3>
              <span class="text-xs rounded-full border border-black/10 px-2 py-0.5 text-zinc-600 group-hover:bg-black/5">Open</span>
            </div>
            <p class="mt-2 text-sm text-zinc-700">A cinematic rock opera about love, control, and the meaning of freedom.</p>
          </div>          
        </a>

        <!-- Vive La Existence -->
        <a href="/vive" class="group block rounded-2xl overflow-hidden border border-white/70 bg-white/70 backdrop-blur shadow-sm hover:shadow-lg transition">
          <div class="relative h-48">
            <img src="/images/vive/vive-banner.jpg" alt="Vive La Existence banner" class="absolute inset-0 w-full h-full object-cover object-center" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/10 to-transparent"></div>
            <div class="absolute bottom-3 left-3 text-white text-sm px-2 py-1 rounded bg-white/10 border border-white/20">Album</div>
          </div>
          <div class="p-5">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold">Vive La Existence</h3>
              <span class="text-xs rounded-full border border-black/10 px-2 py-0.5 text-zinc-600 group-hover:bg-black/5">Open</span>
            </div>
            <p class="mt-2 text-sm text-zinc-700">Bright edges, dark currents—an ode to stubborn hope.</p>
          </div>
        </a>
        <!-- Songs of Nope and Zonders -->
        <a href="/nope-and-zonders" class="group block rounded-2xl overflow-hidden border border-white/70 bg-white/70 backdrop-blur shadow-sm hover:shadow-lg transition">
          <div class="relative h-48">
            <img src="/images/nope/nope-banner.jpg" alt="Songs of Nope and Zonders banner"
            class="absolute inset-0 w-full h-full object-cover object-center" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/10 to-transparent"></div>
            <div class="absolute bottom-3 left-3 text-white text-sm px-2 py-1 rounded bg-white/10 border border-white/20">Album</div>
          </div>
          <div class="p-5">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold">Songs of Nope and Zonders</h3>
              <span class="text-xs rounded-full border border-black/10 px-2 py-0.5 text-zinc-600 group-hover:bg-black/5">Open</span>
            </div>
            <p class="mt-2 text-sm text-zinc-700">Funny, tender, a little paranoid—grief, midnight snacks, reinvention.</p>
          </div>
        </a>        
      </div>
    </div>
  </section>

  <!-- QUICK LINKS -->
  <section class="relative pb-14 md:pb-20">
    <div class="max-w-7xl mx-auto px-6 md:px-8">
      <div class="grid sm:grid-cols-3 gap-4">
        <a href="/blog" class="rounded-2xl bg-white/70 backdrop-blur border border-white px-6 py-5 hover:bg-white shadow-sm transition text-center">Blog & News</a>
        <a href="/about" class="rounded-2xl bg-white/70 backdrop-blur border border-white px-6 py-5 hover:bg-white shadow-sm transition text-center">About Lost Track</a>
        <a href="mailto:sela@losttrackmusic.com" class="rounded-2xl bg-white/70 backdrop-blur border border-white px-6 py-5 hover:bg-white shadow-sm transition text-center">Contact</a>
      </div>
    </div>
  </section>

  <!-- SUBSCRIBE -->
  <section id="subscribe" class="relative py-14 md:py-20">
    <div class="max-w-3xl mx-auto px-6 md:px-8">
      <div class="rounded-2xl border border-white/70 bg-white/70 backdrop-blur p-6 md:p-8 shadow-sm">
        <h2 class="text-2xl font-semibold">Get updates</h2>
        <p class="mt-2 text-zinc-700">Be first to hear new tracks, behind‑the‑scenes notes, and release news.</p>
        <div class="mt-5">
          <script async data-uid="1c06fc89eb" src="https://lost-track.kit.com/1c06fc89eb/index.js"></script>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
