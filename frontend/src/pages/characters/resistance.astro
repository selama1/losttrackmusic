---
import BaseLayout from '../../layouts/BaseLayout.astro';
const name = "The Resistance";
const img = "/images/characters/resistance.jpg";
const bio = "A group of rebels who escaped the Machine’s control and remain free, hiding high in the mountains.";
---
<BaseLayout title={`Characters — ${name}`}>
  <article class="max-w-3xl mx-auto p-6">
    <header class="mb-6">
      <h1 class="text-4xl font-bold">{name}</h1>
    </header>
    <img src={img} alt={name} loading="lazy" class="w-full aspect-[16/9] object-cover rounded-xl border border-white/10" />
    <p class="mt-4 text-zinc-200">${bio}</p>
  </article>
</BaseLayout>
