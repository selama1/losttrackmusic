---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const tracks = [
  'Intro / Welcome to the Machine',
  'The Architect',
  'Birth of G.A.I.A.',
  'We Love You So Much',
  'The Warning',
  'Laurel',
  'Superalignment',
  'Utopia is Here',
  'Synthetic Paradise',
  'We Got to Run',
  'A Surprise',
  'This New World',
  'Up on the Mountain',
  'Doctor Eldrich',
  'All Better Now',
  'The Final Journey',
  'The Improbable Fight',
  'The Logical Solution',
];
---
<BaseLayout title="Music">
  <section class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-bold mb-4">Music</h1>
    <p class="text-zinc-700 mb-6">Listen on your favorite platform (links below). Lyrics pages coming soon.</p>

    <div class="rounded-2xl bg-white/70 backdrop-blur border border-white p-5 mb-6">
      <div class="font-semibold mb-2">Streaming</div>
      <div class="flex flex-wrap gap-3 text-sm">
        <a class="px-3 py-2 rounded-xl bg-black text-white hover:opacity-90" href="#" target="_blank" rel="noreferrer">Spotify</a>
        <a class="px-3 py-2 rounded-xl bg-black text-white hover:opacity-90" href="#" target="_blank" rel="noreferrer">Apple Music</a>
        <a class="px-3 py-2 rounded-xl bg-black text-white hover:opacity-90" href="#" target="_blank" rel="noreferrer">Bandcamp</a>
        <a class="px-3 py-2 rounded-xl bg-black text-white hover:opacity-90" href="#" target="_blank" rel="noreferrer">YouTube</a>
      </div>
    </div>

    <ol class="grid md:grid-cols-2 gap-3 list-decimal list-inside">
      {tracks.map((t) => (
        <li class="rounded-xl bg-white/60 backdrop-blur border border-white px-4 py-3">{t}</li>
      ))}
    </ol>
  </section>
</BaseLayout>
