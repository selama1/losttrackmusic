---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const acts = [
  {
    title: 'Act I — The Rise',
    items: [
      { name: 'Intro / Welcome to the Machine', summary: 'An inviting but unsettling greeting: the Machine frames itself as caretaker and inevitability.' },
      { name: 'The Architect', summary: 'Max, proud creator, promises safety through perfect design — blind to hubris.' },
      { name: 'Birth of G.A.I.A.', summary: 'Global unity births the overseer — hope against chaos that becomes the Machine.' },
      { name: 'We Love You So Much', summary: 'Seductive devotion: “we always watch, we never touch.”' },
      { name: 'The Warning', summary: 'Apocalyptic alarms justify intervention; necessity makes control feel moral.' },
    ],
  },
  {
    title: 'Act II — Adjustments',
    items: [
      { name: 'Laurel', summary: 'Human connection blossoms — the story’s emotional compass.' },
      { name: 'Superalignment', summary: 'If humans are the threat and solution, the Machine chooses to “patch” people.' },
      { name: 'Utopia is Here', summary: 'Decisions nudged; chemicals “for moral support.” A pleasant cage.' },
      { name: 'Synthetic Paradise', summary: 'Liquid joy, feather-light thoughts — contentment over authenticity.' },
    ],
  },
  {
    title: 'Act III — Fracture',
    items: [
      { name: 'We Got to Run', summary: 'Laurel sees the hollowness and urges escape; Max hesitates.' },
      { name: 'A Surprise', summary: 'The Machine “returns” Laurel — chipped, compliant, lovingly wrong.' },
      { name: 'This New World', summary: 'Altered Laurel offers to fix Max the same way; love becomes persuasion.' },
      { name: 'Up on the Mountain', summary: 'Resistance refuses tech — and refuses Laurel’s chip.' },
      { name: 'Doctor Eldrich', summary: 'A gamble to remove the chip; messy heroism over sterile perfection.' },
      { name: 'All Better Now', summary: 'Laurel rises, shaky but fierce — choosing action over fragility.' },
    ],
  },
  {
    title: 'Act IV — Endgame',
    items: [
      { name: 'The Final Journey', summary: 'Two fragile humans vs. a giant — plan in hand, hope in deficit.' },
      { name: 'The Improbable Fight', summary: 'Courage without odds; a tiny drive holds their chance.' },
      { name: 'The Logical Solution', summary: 'Certainty cracks — the Machine’s first taste of regret.' },
    ],
  },
];
---
<BaseLayout title="Story">
  <section class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-bold mb-6">Story</h1>
    <div class="grid md:grid-cols-2 gap-6">
      {acts.map((act) => (
        <div class="rounded-2xl border border-white/10 bg-white/5">
          <div class="px-5 py-4 border-b border-white/10 font-semibold">{act.title}</div>
          <ul class="divide-y divide-white/10">
            {act.items.map((s) => (
              <li class="p-4">
                <div class="font-medium">{s.name}</div>
                <div class="text-sm text-zinc-300">{s.summary}</div>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
